<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">


    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back icon -->
        <TextView
            android:id="@+id/icoBack"
            style="@style/FaIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/search_back"
            android:padding="6dp"
            android:text="@string/fa_arrow_left" />

        <!-- Search input -->
        <EditText
            android:id="@+id/inputSearch"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@color/input_pill"
            android:backgroundTint="@color/input_pill"
            android:hint="@string/search_hint"
            android:paddingHorizontal="12dp"
            android:textColor="@color/blum_secondary"
            android:textColorHint="@color/blum_secondary" />

        <!-- Search icon -->
        <TextView
            android:id="@+id/icoSearch"
            style="@style/FaIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/search"
            android:padding="6dp"
            android:text="@string/fa_search"/>
    </LinearLayout>

    <!-- ðŸŒ¸ Grid of categories -->
    <GridLayout
        android:id="@+id/gridCategories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:columnCount="2"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Birthday -->
        <LinearLayout
            android:id="@+id/catBirthday"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:background="@drawable/circle_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cat_birthday"
                    android:textSize="14sp"
                    android:textColor="@color/blum_secondary"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Roses -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:background="@drawable/circle_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cat_roses"
                    android:textSize="14sp"
                    android:textColor="@color/blum_secondary"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Wedding -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:background="@drawable/circle_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cat_wedding"
                    android:textSize="14sp"
                    android:textColor="@color/blum_secondary"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Spring -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:background="@drawable/circle_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cat_spring"
                    android:textSize="14sp"
                    android:textColor="@color/blum_secondary"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Summer -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:background="@drawable/circle_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cat_summer"
                    android:textSize="14sp"
                    android:textColor="@color/blum_secondary"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Autumn -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:background="@drawable/circle_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cat_autumn"
                    android:textSize="14sp"
                    android:textColor="@color/blum_secondary"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Winter -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:background="@drawable/circle_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cat_winter"
                    android:textSize="14sp"
                    android:textColor="@color/blum_secondary"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Surprise -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:background="@drawable/circle_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cat_surprise"
                    android:textSize="14sp"
                    android:textColor="@color/blum_secondary"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

    </GridLayout>

    <!-- Reusable Bottom Navigation -->
    <!-- Reusable Bottom Navigation -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>