<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fitsSystemWindows="true">

    <!-- ───────── Top Navigation (Reusable) ───────── -->
    <include
        android:id="@+id/topNav"
        layout="@layout/layout_top_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ───────── Scrollable Content ───────── -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topNav"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bouquet_blossom"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/blum_secondary"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Product Image & Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Product Image -->
                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/blossom"
                    android:contentDescription="@string/bouquet_blossom"
                    android:layout_marginEnd="16dp"/>

                <RadioGroup
                    android:id="@+id/radioGroupBouquet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Grand -->
                    <RadioButton
                        android:id="@+id/radioGrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/size_grand"
                        android:textColor="@color/blum_secondary"
                        android:buttonTint="@color/blum_secondary"
                        android:background="@drawable/bg_bouquet_option"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <!-- Deluxe -->
                    <RadioButton
                        android:id="@+id/radioDeluxe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/size_deluxe"
                        android:textColor="@color/blum_secondary"
                        android:buttonTint="@color/blum_secondary"
                        android:background="@drawable/bg_bouquet_option"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <!-- Original -->
                    <RadioButton
                        android:id="@+id/radioOriginal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/size_original"
                        android:textColor="@color/blum_secondary"
                        android:buttonTint="@color/blum_secondary"
                        android:background="@drawable/bg_bouquet_option"
                        android:padding="12dp"
                        android:textStyle="bold"/>
                </RadioGroup>



            </LinearLayout>   <!-- ✅ CLOSE row here -->

            <!-- Ingredients (now outside the row, will display properly) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/card_bg_light"
                android:backgroundTint="@color/card_bg_light"
                android:text="@string/ingredients_label"
                android:textColor="@color/blum_dark_green" />



            <!-- Wrapping Options -->
            <TextView
                android:text="@string/select_wrapping"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/blum_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/radioGroupWrapping"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioWaterproof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wrap_waterproof"
                    android:textColor="@color/blum_secondary" />

                <RadioButton
                    android:id="@+id/radioSolid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wrap_solid"
                    android:textColor="@color/blum_secondary" />

                <RadioButton
                    android:id="@+id/radioPaper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wrap_paper"
                    android:textColor="@color/blum_secondary" />
            </RadioGroup>

            <!-- Add Note -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/optional_note"
                android:textStyle="bold"
                android:textColor="@color/blum_secondary"
                android:layout_marginTop="16dp"/>


            <!-- Quantity & Add to Cart -->

            <EditText
                android:id="@+id/etNote"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:background="@color/card_bg_light"
                android:hint="@string/hint_note"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMinus"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/card_bg_light"
                    android:text="@string/qty_minus"
                    android:textColor="@color/blum_secondary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:textAllCaps="false"/>   <!-- FIXED -->


                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="@string/qty_default"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/blum_secondary"
                    android:layout_marginHorizontal="8dp"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlus"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/card_bg_light"
                    android:text="@string/qty_plus"
                    android:textColor="@color/blum_secondary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:textAllCaps="false"/>   <!-- FIXED -->


                <Button
                    android:id="@+id/btnAddToCart"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/input_pill"
                    android:text="@string/add_to_cart"
                    android:textColor="@color/blum_secondary" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ───────── Bottom Navigation (Reusable) ───────── -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>