<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fitsSystemWindows="true">

    <!-- ───────── Top Navigation (Reusable) ───────── -->
    <include
        android:id="@+id/topNav"
        layout="@layout/layout_top_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ───────── Scrollable Profile Content ───────── -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topNav"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Profile Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/blum_secondary"
                android:layout_marginBottom="12dp"/>

            <!-- Profile Icon -->
            <TextView
                android:id="@+id/icoProfile"
                style="@style/FaIcon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:gravity="center"
                android:text="@string/fa_user"
                android:textSize="64sp"
                android:textColor="@color/blum_secondary"
                android:layout_marginBottom="20dp"/>
            <!-- Edit Profile -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/profile_edit"
                android:textColor="@color/blum_dark_green"
                android:backgroundTint="@android:color/white"
                app:cornerRadius="24dp"
                app:iconTint="@color/blum_dark_green"
                app:iconPadding="8dp"
                app:iconGravity="textStart" />

            <!-- Cart -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/profile_cart"
                android:textColor="@color/blum_dark_green"
                android:backgroundTint="@android:color/white"
                app:cornerRadius="24dp"
                app:iconTint="@color/blum_dark_green"
                app:iconPadding="8dp"
                app:iconGravity="textStart" />

            <!-- Orders -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOrders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/profile_orders"
                android:textColor="@color/blum_dark_green"
                android:backgroundTint="@android:color/white"
                app:cornerRadius="24dp"
                app:iconTint="@color/blum_dark_green"
                app:iconPadding="8dp"
                app:iconGravity="textStart" />

            <!-- Discounts -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDiscounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/profile_discounts"
                android:textColor="@color/blum_dark_green"
                android:backgroundTint="@android:color/white"
                app:cornerRadius="24dp"
                app:iconTint="@color/blum_dark_green"
                app:iconPadding="8dp"
                app:iconGravity="textStart" />

            <!-- Settings -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings"
                android:textColor="@color/blum_dark_green"
                android:backgroundTint="@android:color/white"
                app:cornerRadius="24dp"
                app:iconTint="@color/blum_dark_green"
                app:iconPadding="8dp"
                app:iconGravity="textStart" />
        </LinearLayout>
    </ScrollView>

    <!-- ───────── Bottom Navigation (Reusable) ───────── -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
