<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fitsSystemWindows="true">

    <!-- ───────── Top Navigation (Reusable) ───────── -->
    <include
        android:id="@+id/topNav"
        layout="@layout/layout_top_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ───────── Scrollable Content ───────── -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topNav"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deals_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/blum_secondary"
                android:layout_marginBottom="12dp" />

            <!-- Card 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_bg_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deal_1_title"
                        android:textColor="@color/blum_dark_green"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deal_1_sub"
                        android:textSize="14sp"
                        android:textColor="@color/blum_secondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_bg_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deal_2_title"
                        android:textColor="@color/blum_dark_green"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deal_2_sub"
                        android:textSize="14sp"
                        android:textColor="@color/blum_secondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_bg_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deal_3_title"
                        android:textColor="@color/blum_dark_green"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deal_3_sub"
                        android:textSize="14sp"
                        android:textColor="@color/blum_secondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Terms -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deal_terms"
                android:textSize="12sp"
                android:alpha="0.7"
                android:textColor="@color/blum_secondary"
                android:layout_marginBottom="16dp"/>

            <!-- Shop Here Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShopHere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deal_shop_here"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/blum_secondary"
                app:cornerRadius="24dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- ───────── Bottom Navigation (Reusable) ───────── -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>